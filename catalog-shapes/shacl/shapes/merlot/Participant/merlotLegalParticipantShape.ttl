merlot:MerlotLegalParticipantShape
    a sh:NodeShape ;
    sh:node gx:LegalParticipantShape ;
    sh:targetClass merlot:MerlotLegalParticipant ;
    sh:property
        # MERLOT specific
        [   sh:datatype xsd:string ;
            sh:description "Legal name of the entity." ;
            sh:maxCount 1 ;
            sh:name "legal name (legalName)"@en,
            "Rechtlich eingetragener Name (legalName)"@de ;
            sh:order 0 ;
            sh:path merlot:legalName ;
        ],
        [
            sh:path merlot:termsAndConditions ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:node merlot:ParticipantTermsAndConditionsShape ;
            sh:order 2 ;
            sh:name "terms and conditions (termsAndConditions)"@en,
            "Gesch채ftsbedingungen (termsAndConditions)"@de ;
        ],
        [   skos:example "'L.L.C, GmbH'" ;
            sh:datatype xsd:string ;
            sh:description "Rechtsform"@de,
                "Legal form"@en ;
            sh:in ( "LLC" "Corporation" "Limited partnership (LP)" "Nonprofit corporation" "Gesellschaft mit beschr채nkter Haftung (GmbH)" "Aktiengesellschaft (AG)" "Einzelunternehmen" "Gesellschaft b체rgerlichen Rechts (GbR)" "Offene Handelsgesellschaft (OHG)" "Kommanditgesellschaft (KG)" "Unternehmergesellschaft (haftungsbeschr채nkt)" "Sole Trader" "Unincorporated Association" "Partnership" "Limited Partnership" "Trust" "Limited Company" "Limited Liability Partnership (LLP)" "Community Interest Company (CIC)" "Charitable Incorporated Organisation (CIO)" "Co-operative Society (Co-op)" "Community Benefit Society (BenCom)" "Societas Europea (SE)" "sonstiges" ) ;
            sh:maxCount 1 ;
            sh:name "Rechtsform (legalForm)" ;
            sh:order 1 ;
            sh:path merlot:legalForm 
        ] .

# MERLOT specific
merlot:ParticipantTermsAndConditionsShape
    a sh:NodeShape ;
    sh:targetClass merlot:ParticipantTermsAndConditions ;
    sh:property
        [
            sh:path merlot:URL ;
            sh:name "URL (URL)"@en,
            "Link zum Inhalt (URL)"@de ;
            sh:description "a resolvable link to document" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:datatype xsd:string ;
        ] ;
    sh:property
        [
            sh:path merlot:hash ;
            sh:name "hash (hash)"@en,
            "Hash des Dokuments (hash)"@de ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:description "sha256 hash of the above document." ;
            sh:datatype xsd:string
        ] .